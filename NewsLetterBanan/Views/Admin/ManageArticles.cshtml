@model IEnumerable<NewsLetterBanan.Data.Article>

<h1>Manage Articles</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Published Date</th>
            <th>Editor’s Choice</th>
            <th>Archived</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Headline</td> <!-- Display the headline of the article -->
           
                
                <td>@article.DateStamp.ToString("g")</td> <!-- Display the formatted published date -->
                <td>@(article.IsEditorsChoice ? "Yes" : "No")</td> <!-- Check if the article is editor's choice -->
                <td>@(article.IsArchived ? "Yes" : "No")</td> <!-- Check if the article is archived -->
                <td>
                    <!-- Edit Article -->
                    <a class="btn btn-primary" href="/Admin/EditArticle/@article.Id">Edit</a>

                    <!-- Delete Article -->
                    <form asp-action="DeleteArticle" asp-route-id="@article.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="/Admin/CreateArticle">Create New Article</a>
